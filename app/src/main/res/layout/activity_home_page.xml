<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kahitcoffee.HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textColor="#807D7D" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome To our Menu!"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".HomePage">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_light"
                    android:iconifiedByDefault="false"
                    android:padding="8dp"
                    android:queryHint="@string/search_for_products" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:backgroundTint="@color/darkblue"
                    android:background="@color/Green">

                    <ImageView
                        android:id="@+id/promotional_image2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/promotion"
                        android:scaleType="centerCrop"
                        android:src="@drawable/iced" />

                    <ImageView
                        android:id="@+id/second_promotional_image3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_toEndOf="@id/promotional_image2"
                        android:layout_marginStart="16dp"
                        android:contentDescription="promotions"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cap" />
                    <ImageView
                        android:id="@+id/second_promotional_image1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_toEndOf="@id/second_promotional_image3"
                        android:layout_marginStart="16dp"
                        android:contentDescription="promotions"
                        android:scaleType="centerCrop"
                        android:src="@drawable/latte" />

                </RelativeLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Genre/Category" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="@android:color/white">

                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/category_all"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:text="@string/all"
                        android:textColor="#3abc12"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/horror"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:textColor="#3abc12"
                        android:text="Cold"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/fantasy"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3abc12"
                        android:backgroundTint="@color/black"
                        android:text="Hot"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/comedy"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:textColor="#3abc12"
                        android:text="Milktea"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/adult"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#3abc12"
                        android:backgroundTint="@color/black"
                        android:text="Snacks"
                        android:padding="8dp" />



                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="@string/recommendation" />
            </LinearLayout>



            <!-- Product List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cuppucinoCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:backgroundTint="@color/Green"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_margin="8dp"
                        android:contentDescription="capp">

                        <ImageView
                            android:id="@+id/capcover"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="#FDFDFD"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/cap"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/capWishlist"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/capPrice"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$69"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />


                        <TextView
                            android:id="@+id/cap"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Cappuccino"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.322"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/capDescription"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text="A freshly pulled shot of espresso layered with steamed whole milk and thick rich foam to offer a luxurious velvety texture and complex aroma."
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.953"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.904"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/latteCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="@color/darkblue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/bleach">

                        <ImageView
                            android:id="@+id/pic2"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="#FDFDFD"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/latte"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/imageView42"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/priceTxt2"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$69"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />


                        <TextView
                            android:id="@+id/titleTxt4"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Latte"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.322"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/latteDescription"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text="A milk coffee that is a made up of one or two shots of espresso, steamed milk and a final, thin layer of frothed milk on top."
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.953"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.904"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/MistoCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/Green"
                    app:cardElevation="4dp"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/bleach">

                        <ImageView
                            android:id="@+id/pic3333"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="@color/white"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/misto"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/imageView3242"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/priceTxt34"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$50"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />

                        <TextView
                            android:id="@+id/titleTx33t5"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Caffe Misto"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.839"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.341"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/titleTxt23325"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text="A one-to-one combination of fresh-brewed coffee and steamed milk "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.988"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.745"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/americanoCardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/darkblue"
                    app:cardElevation="4dp"
                    tools:ignore="DuplicateSpeakableTextCheck">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="347dp"
                        android:layout_height="180dp"
                        android:layout_margin="8dp"
                        android:contentDescription="americano">

                        <ImageView
                            android:id="@+id/americanoCover"
                            android:layout_width="164dp"
                            android:layout_height="164dp"
                            android:background="#FDFDFD"
                            android:contentDescription="@string/asdsa01123"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/iced"
                            tools:ignore="ImageContrastCheck" />

                        <ImageView
                            android:id="@+id/americanoWishlist"
                            android:layout_width="32dp"
                            android:layout_height="29dp"
                            android:contentDescription="@string/wishlist"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.095"
                            app:srcCompat="@drawable/btn_3"
                            app:tint="@color/black"
                            tools:ignore="MissingConstraints,ImageContrastCheck" />

                        <TextView
                            android:id="@+id/americanoprice"
                            android:layout_width="71dp"
                            android:layout_height="39dp"
                            android:contentDescription="@string/pricetxt"
                            android:text="$69"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.614"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.081"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck,VisualLintOverlap" />


                        <TextView
                            android:id="@+id/americano"
                            android:layout_width="142dp"
                            android:layout_height="wrap_content"
                            android:singleLine="true"

                            android:text="Iced Americano"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.8"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.322"
                            tools:ignore="DuplicateIds,MissingConstraints,TextSizeCheck" />

                        <TextView
                            android:id="@+id/americanoDescription"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/titletxt"
                            android:ellipsize="end"
                            android:maxLines="5"
                            android:text=" an Americano served over ice: espresso, cold water (optional), and ice"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="italic"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.71"
                            tools:ignore="TextSizeCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>






            </LinearLayout>

        </LinearLayout>






    </ScrollView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomNavigationView"
        android:layout_width="412dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="#020202">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/exploreLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/explore1"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/btn_1" />

                    <TextView
                        android:id="@+id/explore2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="explorer"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cartLayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cart"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/btn_2" />

                    <TextView
                        android:id="@+id/cart2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cart"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
